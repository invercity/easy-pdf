extends condition

block content
    style
        include  style.css
    if (title)
        h2 #{title}
    if (description)
        h2 #{description}
    .cols(style={"font-size": fontSize})
        each item in names ? names: []
            .pdf-column
                ul.pdf-list
                    lh.pdf-list-header= item.value
                    each record in records ? records: []
                        li= record[columns.indexOf(item.name)]