extends condition
block content
    style.
        .cols {
            display: table;
            width: 100%;
        }

        .pdf-column {
            display: table-cell;
            margin: 0;
            padding: 0;
            margin-bottom: 20px;
        }

        .pdf-list {
            margin: 0;
            padding: 0;
            list-style: none;
            display: table;
            width: 100%;
        }

        .pdf-list-header {
            padding: 6px 0 0 0;
        }

        ul li {
            background: #FFFFFF;
            padding: 6px 0;
        }

        ul li:nth-child(even) {
            background: #f1f1f1;
        }
    if (title)
        h2(style=title.style) #{title.value}
    if (description)
        h2 #{description}
    .cols(style={"font-size": options.fontSize})
        each item in names ? names: []
            .pdf-column
                div.pdf-list(style=options.columns.style)
                    .pdf-list-header(style=item.style)= item.value
                    each record in records ? records: []
                        div= record[columns.indexOf(item.name)]