extends condition

block content
    style.
        .pdf-column {
            display: inline-block;
            margin: 0;
            padding: 0;
            margin-bottom: 20px;
        }

        .pdf-list {
            margin: 0;
            padding: 0;
            list-style: none;
        }

        .pdf-list-header {
            padding: 5px;
        }

        ul li {
            background: #FFFFFF;
            padding: 3px;
        }

        ul li:nth-child(even) {
            background: #f1f1f1;
        }
    if (title)
        h2(style=title.style) #{title.value}
    if (description)
        h2 #{description}
    .cols(style={"font-size": options.fontSize})
        each item in names ? names: []
            .pdf-column(style=options.columns.style)
                ul.pdf-list
                    lh(style=item.style)= item.value
                    each record in records ? records: []
                        li= record[columns.indexOf(item.name)]