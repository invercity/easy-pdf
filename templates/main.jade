extends condition

block content
    if (title)
        h3 #{title}
    if (description)
        h3 #{description}

    .cols(style={'font-size': fontSize})
        each item in names ? names: []
            .pdf-column(style={'display':'inline-block','margin-right': '20px'})
                table.table.table-bordered.table-striped.table-condensed
                    thead
                        tr
                            th= item.title
                    tbody
                        each row in records ? records: []
                            tr
                                td= row[columns.indexOf(item.name)]

